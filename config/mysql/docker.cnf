[mysqld]
max_allowed_packet=16M
innodb_file_per_table
ft_min_word_len=2
key_buffer_size=16M
thread_stack=192k
thread_cache_size=8
max_binlog_size=100M
lower_case_table_names=2
innodb_log_file_size=128MB
innodb_strict_mode=0
performance_schema=ON
query_cache_size=0
query_cache_type=0
log_error=/var/log/mysql/mariadb.err